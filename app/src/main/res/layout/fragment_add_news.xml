<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.AddNewsFragment"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"/>

        <EditText
            android:id="@+id/edt_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan judul berita"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Berita"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edt_isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan isi berita"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Url Gambar"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edt_url_gambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contoh: http://site.com/filename.jpg"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>